							<TextField fx:id="materialIdField"
								style="-fx-padding: 12; -fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6;" />
						</VBox>

						<VBox spacing="5.0">
							<Label text="Material Name"
								style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
							<TextField fx:id="materialNameField"
								style="-fx-padding: 12; -fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6;" />
						</VBox>

						<VBox spacing="5.0">
							<Label text="Price"
