					<VBox
						style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
						<Label text="Report Output"
							style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;" />
						<TextArea fx:id="reportTextArea" prefHeight="600.0"
							prefWidth="700.0"
							style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 6; -fx-font-family: 'Courier New'; -fx-font-size: 12px;" />
					</VBox>
				</HBox>
			</VBox>

			<!-- Material Management View -->
			<VBox fx:id="materialManagementView" visible="false"
				spacing="20.0" style="-fx-padding: 30;">
				<HBox alignment="CENTER_LEFT" spacing="20.0">
					<Label text="Material Management"
						style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
					<Button fx:id="addMaterialBtn" text="+ Add Material"
						style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-font-size: 12px;" />
					<Button fx:id="refreshMaterialsBtn" text="🔄 Refresh"
						style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-font-size: 12px;" />
				</HBox>

